{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "basehub": [
        "./src/shims/basehub-main.ts"
      ],
      "basehub/events": [
        "./src/shims/basehub-events.ts"
      ],
      "basehub/react-pump": [
        "./src/shims/basehub-react-pump.tsx"
      ],
      "basehub/react-rich-text": [
        "./src/shims/basehub-react-rich-text.tsx"
      ],
      "basehub/next-image": [
        "./src/shims/basehub-next-image.ts"
      ],
      "@/../basehub-types": [
        "./src/shims/basehub-types.ts"
      ],
      "@/lib/basehub/fragments": [
        "./src/shims/basehub-fragments.ts"
      ],
      "basehub/react-search": [
        "./src/shims/basehub-react-search.tsx"
      ],
      "basehub/react-icon": [
        "./src/shims/basehub-react-icon.tsx"
      ],
      "basehub/next-toolbar": [
        "./src/shims/basehub-next-toolbar.tsx"
      ],
      "basehub/react-code-block": [
        "./src/shims/basehub-react-code-block.tsx"
      ],
      "basehub/react-code-block/client": [
        "./src/shims/basehub-react-code-block-client.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "basehub.d.ts",
    "basehub.config.ts",
    "basehub-types.d.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
